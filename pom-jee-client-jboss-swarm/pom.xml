<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<parent>
		<groupId>org.cyk.pom.jee.client.jboss</groupId>
		<artifactId>pom-jee-client-jboss</artifactId>
		<version>pom.jee.client.jboss.0.0.1</version>
	</parent>

	<name>JBoss Swarm client project object model</name>
	<url>http://www.cykcorp.org</url>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.cyk.pom.jee.client.jboss.swarm</groupId>
	<artifactId>pom-jee-client-jboss-swarm</artifactId>
	<version>pom.jee.client.jboss.swarm.0.0.1</version>
	<packaging>pom</packaging>

	<properties>
		<wildfly.swarm.bom.version>2017.2.0</wildfly.swarm.bom.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<!-- Wildfly Swarm Bill Of Materials -->
			<dependency>
				<groupId>org.wildfly.swarm</groupId>
				<artifactId>bom-all</artifactId>
				<version>${wildfly.swarm.bom.version}</version>
				<scope>import</scope>
				<type>pom</type>
			</dependency>
		</dependencies>
	</dependencyManagement>



	<build>
		<pluginManagement>
			<plugins>
				<!-- Swarm -->
				<plugin>
					<groupId>org.wildfly.swarm</groupId>
					<artifactId>wildfly-swarm-plugin</artifactId>
					<version>${wildfly.swarm.bom.version}</version>
					<executions>
						<execution>
							<goals>
								<goal>package</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.wildfly.swarm</groupId>
			<artifactId>arquillian</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>package.as.microservices</id>

			<build>
				<plugins>
					<plugin>
						<groupId>org.wildfly.swarm</groupId>
						<artifactId>wildfly-swarm-plugin</artifactId>
					</plugin>
				</plugins>
				<finalName>${project.artifactId}-${project.version}</finalName>
			</build>

			<dependencies>
				<!-- Web server -->
				<dependency>
					<groupId>org.wildfly.swarm</groupId>
					<artifactId>undertow</artifactId>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

</project>
